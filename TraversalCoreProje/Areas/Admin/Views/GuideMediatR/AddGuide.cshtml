@model CreateGuideCommand
@{
    ViewData["Title"] = "AddGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Yeni Rehber Ekleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="GuideID"/>
    <label>Rehber Adı</label>
    <input type="text" class="form-control" asp-for="Name"/>
    <br/>
    <label>Rehber Açıklaması</label>
    <input type="text" class="form-control" asp-for="Description"/>
    <br/>
    <button class="btn btn-outline-primary">Rehberi Kaydet</button>
</form>

